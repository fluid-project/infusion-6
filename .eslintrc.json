{
    "extends": "eslint-config-fluid",
    "globals": {
        "$": true
    },
    "rules": {
        "strict": ["error", "global"],
        "no-loop-func": 0,
        "no-console": 0,
        "quotes": [
            "error",
            "double", {
               "allowTemplateLiterals": true,
               "avoidEscape": true
            }
        ]
    },
    "settings": {
        "jsdoc": {
            "preferredTypes": {
                "*": "any",
                "any": "any"
            }
        }
    },
    "parserOptions": {
        "ecmaVersion": 2022
    },
    "env": {
        "es6": true
    }
}
